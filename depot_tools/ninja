# found in the LICENSE file.

OS="$(uname -s)"

if [ "${OS}" = "Linux" ]; then
  exec ninja-linux64 "$@"
elif [ "${OS}" = "Darwin" ]; then
  exec ninja-mac "$@"
elif [[ ${OS} == CYGWIN* ]]; then
  exec cmd.exe /c `cygpath -t windows $0`.exe "$@"
elif [[ ${OS} == MINGW32* ]]; then
  cmd.exe //c $0.exe "$@"
else
  echo "Unsupported OS ${OS}"
  exit 1
fi

